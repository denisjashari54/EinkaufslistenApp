<Window x:Class="EinkaufslistenWPF.TextInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Eingabe" Height="150" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock x:Name="MessageText" Text="Gib den Namen ein:" Margin="0,0,0,10"/>
            <TextBox x:Name="InputTextBox" Width="250"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="OK" Width="80" Click="OK_Click" Margin="5"/>
                <Button Content="Abbrechen" Width="80" Click="Cancel_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
